<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EWalle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_background</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnPrimary">@color/date_text_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/date_text_color</item>
        <item name="colorSecondaryVariant">@color/sign_in_color</item>
        <item name="backgroundColor">@color/sign_in_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="mainScreenToolbar">
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="theme">@style/Theme.MaterialComponents.DayNight.NoActionBar</item>
    </style>
</resources>