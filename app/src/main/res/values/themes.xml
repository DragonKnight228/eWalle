<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EWalle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimaryVariant">@color/dark_text_color</item>
        <item name="colorOnPrimary">@color/date_text_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_screen_text_color</item>
        <item name="colorSecondaryVariant">@color/sign_in_color</item>
        <item name="backgroundColor">@color/grey_background_color</item>
        <item name="colorAccent">#171822</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>
    
    <style name="signInButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="createAccountButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_without_background</item>
    </style>

    <style name="balanceButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_button</item>
    </style>

    <style name="mainScreenToolbar">
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
    </style>

    <style name="CheckedMenuItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableStart">@drawable/checked_pointer</item>
    </style>


</resources>